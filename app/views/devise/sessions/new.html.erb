<div class="wrapper">
  <div class="container">
        <h2>Acesse sua conta</h2>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-4">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label => "E-mail", required: false, autofocus: true %>
          <%= f.input :password, :label => "Senha", required: false %>
          <%= f.input :remember_me, :label => "Lembrar-me", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Logar", class: "btn-white" %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
