<div class="container">
  <h1>Seja um apoiador da nossa causa</h1>
  <p>Faça uma das doações abaixo e tenha o seu nome em nosso Hall da Fama:</p>
  <!-- This form is used to pass parameters to controller -->
  <%= form_tag contributors_path do %>
  <article>
    <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
    <% end %>
    <input type="text" id='amount-user' class='hidden' name='amount' value="">

    <div class="row" style="width: 100%; margin: 0 auto">
      <div class="col-md-1"></div>
      <% @amount.each do |value| %>
      <div class="col-md-2">
        <div class="heart">
          <%= image_tag("heart#{value}.png") %>
          <div class="donate-text">
            <%= pretty_amount(value) %>
            <div>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="<%= @description %>"
              data-amount="<%= value.to_i %>"
              data-locale="auto"
              <% if user_signed_in? %>
              data-email="<%= current_user.email %>"
              <% end %>
              data-bitcoin="true"
              data-label="DOAR">
            </script>

          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</article>
<% end %>
</div>

