<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="title-all">
        <h3>Todas as campanhas</h3>
      </div>
      <% @campaigns.each do |campaign| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-category"><%= campaign.institution.name %></div>
          <div class="card-description">
            <h2> <%= campaign.start_date.strftime("%d/%m") %> a <%= campaign.end_date.strftime("%d/%m") %> </h2>
            <p>Local: <%= campaign.cpoint.address %></p>
          </div>
          <a class="card-link" href="<%= campaign_path(campaign) %>" ></a>
        </div>
      </div>
      <% end %>
    </div>
    <div class="button-back">
      <%= link_to 'Voltar', :back, class: "btn-pink" %>
    </div>
  </div>
</div>





